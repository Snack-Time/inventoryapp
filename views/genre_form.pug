extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Name of Genre:
      input#name.form-control(type='text', placeholder='Sports, FPS, ect.' name='name' required value=(undefined===genre ? '' : genre.name) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
