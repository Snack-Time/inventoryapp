extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
        label(for='name') Title:
        input#name.form-control(type='text', placeholder='Name of Video Game' name='name' required value=(undefined===game ? '' : game.name) )
    div.form-group
        label(for='ESRB') ESRB Age Rating: 
        select#ESRB.form-control(name='ESRB' required)
            option(value='') --Please select a rating--
            for rating in ratings
                if game
                    if rating._id.toString()===game.ESRB._id.toString()
                        option(value=rating._id selected) #{rating.name}
                    else
                        option(value=rating._id) #{rating.name}
                else
                    option(value=rating._id) #{rating.name}
    div.form-group
        label(for='release_date') Release Date:
        input#release_date.form-control(type='date', placeholder='12/26/1995' name='release_date' value=(undefined===game ? '' : game.release_date) )
    div.form-group
        label(for='developer') Game Developer:
        select#developer.form-control(name='developer' required)
            option(value='') --Please select a company--
            for developer in companies
                if game
                    if developer._id.toString()===game.developer._id.toString()
                        option(value=developer._id selected) #{developer.name}
                    else
                        option(value=developer._id) #{developer.name}
                else
                    option(value=developer._id) #{developer.name}   
    div.form-group
        label(for='publisher') Game Publisher:
        select#publisher.form-control(name='publisher' required)
            option(value='') --Please select a company--
            for publisher in companies
                if game
                    if publisher._id.toString()===game.publisher._id.toString()
                        option(value=publisher._id selected) #{publisher.name}
                    else
                        option(value=publisher._id) #{publisher.name}
                else
                    option(value=publisher._id) #{publisher.name}
    div.form-group
        label Platform:
        div
            for platform in platforms
                div
                    if platform.checked
                        input.checkbox-input(type='checkbox', name='platform', id=platform._id, value=platform._id, checked)
                    else
                        input.checkbox-input(type='checkbox', name='platform', id=platform._id, value=platform._id)
                        label(for=platform._id) &nbsp;#{platform.name}
    div.form-group
        label Genre:
        div
            for genre in genres
                div
                    if genre.checked
                        input.checkbox-input(type='checkbox', name='genre', id=genre._id, value=genre._id, checked)
                    else
                        input.checkbox-input(type='checkbox', name='genre', id=genre._id, value=genre._id)
                        label(for=genre._id) &nbsp;#{genre.name}
    div.form-group
        label(for='desc') Description:
        input#desc.form-control(type='text', placeholder='Summary of Video Game' name='desc' required value=(undefined===game ? '' : game.desc) )
    button.btn.btn-primary(type='submit') Submit

    if errors
        ul
        for error in errors
            li!= error.msg