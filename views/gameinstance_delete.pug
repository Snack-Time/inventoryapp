extends layout

block content

    div(class='container')
        h1= title

        p #[strong Do you really want to delete this copy?]
        p &nbsp;
            a(class="h5" href=gameinstance.url) #{gameinstance.storeid}
            div(class="list-group")
                li(class='list-group-item') #{gameinstance.videogame.name}
                li(class='list-group-item') Platform: #{gameinstance.platform.name}
                if gameinstance.status=='Available'
                    li(class='list-group-item list-group-item-success') #{gameinstance.status}
                else if gameinstance.status=='Maintenance'
                    li(class='list-group-item list-group-item-danger') #{gameinstance.status}
                else
                    li(class='list-group-item list-group-item-warning') #{gameinstance.status}
                    li(class='list-group-item list-group-item-warning') Due date: #{gameinstance.due_back_formatted}
                p &nbsp;

    form(method='POST' class="text-center")
        h3 You cannot undo this action!
        div.form-group
            input#id.form-control(type='hidden', name='id', value=gameinstance._id )

        button.btn.btn-primary(type='submit' class='btn btn-danger btn-lg') Delete copy of #{gameinstance.videogame.name} from database