extends layout

block content
  div(class='container')
    h1(class='text-center') #{title}

    form(method='POST')
      div(class="row mb-3").form-group
        label(for='name' class="col-sm-2 col-form-label") Company:
        input#name.form-control(type='text', placeholder='Nintendo, SEGA, etc.' name='name' required value=(undefined===company ? '' : company.name) )
      button.btn.btn-primary(type='submit') Submit

    if errors
      ul
        for error in errors
          li!= error.msg
