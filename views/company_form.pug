extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Company:
      input#name.form-control(type='text', placeholder='Nintendo, SEGA, etc.' name='name' required value=(undefined===company ? '' : company.name) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
